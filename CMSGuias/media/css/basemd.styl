.bold-text
  font-weight bold
  
dt
  font-weight bold
dd
  background none no-repeat left top
  padding-left 50px

table.table tbody tr td
  padding 1px 2px 1px 2px
  & input[type="number"]
    height 28px
    margin-bottom 0px
  & input[type="checkbox"]+label
    display initial !important
  & [type="checkbox"].filled-in
    &.blue:checked+label:after
      background-color: #0089ec
      border: 2px solid #0870F6
    &.red:checked+label:after
      background-color: #EA142B
      border: 2px solid #E8162A
    &.amber:checked+label:after
      background-color: #FFE400
      border: 2px solid #F4B00A
    &.grey:checked+label:after
      background-color: #606060
      border: 2px solid #303030

input[type="checkbox"].filled-in
  &.blue:checked+label:after
    background-color: #0089ec
    border: 2px solid #0870F6
  &.red:checked+label:after
    background-color: #EA142B
    border: 2px solid #E8162A
  &.amber:checked+label:after
    background-color: #FFE400
    border: 2px solid #F4B00A
  &.grey:checked+label:after
    background-color: #606060
    border: 2px solid #303030
      
.switch label input[type=checkbox]:checked+.lever
  &.blue
    background-color: #0089ec
    &:after
      background-color: #0089ec
  &.red
    background-color: #F44336
    &:after
      background-color: #F44336 !important

table.highlight > tbody > tr:hover
  background #bfbbbb
  background-color rgb(191, 187, 187)
  background-color rgba(191, 187, 187, 0.8)

