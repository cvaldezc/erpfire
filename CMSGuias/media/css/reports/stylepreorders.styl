@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

@page
    margin 1cm

    @frame header_frame
        -pdf-frame-content logo
        //margin-top 1cm
        top 1cm
        left 1cm

    @frame header_frame
        -pdf-frame-content address
        left 5cm
        top 1.5cm
        width 4cm

    @frame header_frame
        -pdf-frame-content contentserie
        right 2cm
        top 2.5cm
        width 5cm

    @frame header_frame
        -pdf-frame-content bedsideone
        left 1cm
        top 4cm
        width 40%

    @frame header_frame
        -pdf-frame-content bedsidetwo
        right 1cm
        top 4cm
        width 45%

    /*@frame header_frame
        -pdf-frame-content observation
        margin 0 1cm 0 1cm
        top 5.6cm*/

    @frame content_frame
        top 6cm
        margin 0 1cm 0 1cm

#address
    text-align center
    vertical-align super
    white-space pre

#contentserie
    //border 1px solid #000
    padding 10px 0px 10px 0px
    text-align center
    & > span:first-child
        font-size 18px
        font-weight bold
    & > span:last-child
        font-size 16px
        font-weight bold
        white-space pre

#bedsideone,
#bedsidetwo
/*#observation*/
    & > table > tbody > tr
        & > td:first-child
            font-weight bold
            width 90px

section
    & > table
        & > thead
            & > tr:first-child
                background-color #f2f2f2
                border-top 1px solid black
                border-bottom 1px solid black
                & > th
                    padding 4px 0 0 0
                & > th:first-child
                    border-left 1px solid black
                    width 45px
                & > th:last-child
                    border-right 1px solid black
        & > tbody
            & > tr
                padding 2px 0 2px 0
                & > td
                    text-align center
                & > td:first-child
                    border-left 1px solid black
                & > td:last-child
                    border-right 1px solid black
                    padding 0 5px
                    text-align right
                & > td[rel="left"]
                    text-align left
            & > tr:last-child
                border-bottom 1px solid black

#footer
    /*white-space pre*/
    & > div
        & > strong:first-child
            font-size 12px