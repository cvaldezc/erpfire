{
    "sourceMap": false,
    "compileOnSave": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "lib": ["es5", "dom"],
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "watch": true,
        "types": [
            "angular",
            "angular-cookies",
            "jquery",
            "core-js",
            "node",
            "materialize-css",
            "sweetalert"
        ],
        "typeRoots": [
            // add path to @types
            "./node_modules/@types/"
         ]
    },
    "include": [ "CMSGuias/media/js/*" ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}